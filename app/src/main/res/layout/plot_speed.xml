<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:http="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/textoResumenVelocidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="13dp"
        android:paddingBottom="10dp"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/linegraph"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/ap_white"
        android:layout_below="@+id/textoResumenVelocidad"
        />

    <TextView
        android:id="@+id/max_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linegraph"
        android:layout_alignParentLeft="true"
        android:text="@string/max_speed"
        android:paddingTop="15dp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/velocidad_maxima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linegraph"
        android:paddingTop="15dp"
        android:layout_toRightOf="@+id/max_speed"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/darker_gray"
        />

    <TextView
        android:id="@+id/kmh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linegraph"
        android:layout_toRightOf="@+id/velocidad_maxima"
        android:paddingTop="15dp"
        android:text=" km/h"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/mean_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/max_speed"
        android:layout_alignParentLeft="true"
        android:text="@string/mean_speed"
        android:paddingTop="15dp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/velocidad_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/max_speed"
        android:paddingTop="15dp"
        android:layout_toRightOf="@+id/mean_speed"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/darker_gray"
        />

    <TextView
        android:id="@+id/km_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/max_speed"
        android:layout_toRightOf="@+id/velocidad_media"
        android:paddingTop="15dp"
        android:text=" km/h"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/darker_gray"/>
</RelativeLayout>