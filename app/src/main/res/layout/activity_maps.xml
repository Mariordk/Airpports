<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button android:id="@+id/tipoMapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mapType" />

    <Button android:id="@+id/grafica_altura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tipoMapa"
        android:text="@string/altitude"
        android:drawableRight="@drawable/mountain"
        android:onClick="mostrarAltitudes"
       />

    <Button android:id="@+id/grafica_velocidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grafica_altura"
        android:text="@string/speed"
        android:drawableRight="@drawable/races"
        android:onClick="mostrarVelocidades"
        />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.mario.airpports.MapsActivity" />



</RelativeLayout>


